// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "app/generated/prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Questionnaire {
  id          Int     @id @default(autoincrement()) // Changed to auto-incrementing integer
  title       String
  timerCount  Int     @default(60)
  timerPaused Boolean @default(true)
  background  String? @db.Text

  challenge1Question String @db.Text
  challenge1Code     String @db.Text

  challenge2Prompt String
  options          Option[]
}

model Option {
  id              String        @id @default(uuid())
  questionnaireId Int
  questionnaire   Questionnaire @relation(fields: [questionnaireId], references: [id], onDelete: Cascade)
  text            String        @db.Text
  isCorrect       Boolean       @default(false)
  order           Int           @default(0)
}
